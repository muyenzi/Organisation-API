{{#partial "content"}}
        <style>
    body {
    background-image:url("https://cdn.wallpaper.com/main/2017/09/fernando_mastrangelo_0010_dsc2018.jpg");
    background-repeat:no-repeat;
    background-size:cover;
    text-align:center;
    }

.container {
background-color:#2980B9;
}
   </style>
        <h3>Departments List</h3>
        <div class="container">
        <table class="table table-striped">
        <thead>
            <tr>
                <th>Names</th>
                <th>Description</th>
                <th>Number of Employees</th>
            </tr>
        </thead>
        <tbody>
        {{if departments}}
        {{#each departments }}
            <tr>
                    <td>{{name}}</td>
                    <td>{{info}}</td>
                <td>{{empnumber}} <a href="/departments/:id"><button class="btn btn-danger" style="position:relative;left:100px;">Delete</button></a> </td>
                </tr>

        {{/each}}
    {{else}}
    </table>
    </div>
    {{/partial}}
    {{>layout.hbs}}
