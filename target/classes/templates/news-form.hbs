{{#partial "content"}}
    <style>
form{
top:50%;
color:black;

}
body{
       background-repeat:no-repeat;
       background-size:cover;
       text-align:center;
}
    </style><br><br><br><br><br>
    <h2>Post News</h2><hr>
    <div class="row">
        <div class="col col-sm-6 form-left">
            <br/>
            <form action="/news/new" method="post" >
                <div class="form-group">
                    <label for="departname"> Department Name </label><br>
                    <input class="form-control" type="text" id="departname" name="departname" placeholder="Department name"/>
                </div>
                <div class="form-group">
                    <label for="topic"> Topic </label><br>
                    <input class="form-control" type="text" id="topic" name="topic" placeholder="News Topic"/>
                </div>

                <div class="form-group">
                    <label for="news"> Content </label><br>
                    <input style="width:550px;height:100px" class="form-control" type="text" id="news" name="news" placeholder="News Content"/>
                </div>

                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}